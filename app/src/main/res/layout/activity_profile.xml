<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent">

    <include
        android:id="@+id/profile_appbar"
        layout="@layout/activity_appbar"
        />

    <RelativeLayout
        android:layout_below="@+id/profile_appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        Cover Image-->
        <FrameLayout
            android:id="@+id/profile_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_cover"
                android:scaleType="fitXY"/>

            <Button
                android:layout_width="78dp"
                android:layout_height="22dp"
                android:layout_gravity="end|bottom"
                android:background="@drawable/button_shape"
                android:text="Edit Text"
                android:textSize="9dp"
                android:textColor="@color/colorAccent"/>

        </FrameLayout>


<!--        User Summary-->
        <LinearLayout
            android:id="@+id/profile_user_summary"
            android:layout_below="@+id/profile_cover_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="65dp"
                    android:layout_height="80dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="25dp"
                    app:roundAsCircle="true"
                    android:background="@color/colorAccent"
                    android:src="@drawable/screenshot" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Dara"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Sokdara Dara"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Edit Profile"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>