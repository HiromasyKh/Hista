<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <include layout="@layout/activity_appbar"
        android:id="@+id/profile_user_appbar"></include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:id="@+id/profile_user_image"
        android:src="@drawable/profile_image"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorPrimary"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/profile_user_name"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/profile_user_status"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="@string/profile_status"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/profile_user_update_btn"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:hint="@string/update_profile"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"/>

</LinearLayout>


